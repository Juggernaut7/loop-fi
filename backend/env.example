# LoopFi Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED FOR BACKEND
# ===========================================

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/loopfi

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# ===========================================
# CELO BLOCKCHAIN CONFIGURATION
# ===========================================

# Celo Network (sepolia for testnet, celo for mainnet)
CELO_NETWORK=sepolia

# Celo RPC URL
CELO_RPC_URL=https://rpc.ankr.com/celo_sepolia

# ===========================================
# CONTRACT ADDRESSES (from deployment)
# ===========================================

# These will be filled after contract deployment
SAVINGS_GOAL_CONTRACT=0x0BD0DC85E111cA42363D8c67949c2A4ae85b1Bb7
GROUP_POOL_CONTRACT=0xc328abADc8e0B205948ECD359F341bd9F3d7ebD2
BADGE_NFT_CONTRACT=0x69BFf0d74bBb734cfac1bE3938488E026F02Bc86
LOOPFI_CONTRACT=0xdAdc4B753D0B76147fe3b77623AC7f83783E3b62

# ===========================================
# TOKEN ADDRESSES
# ===========================================

# CELO Token Address (Sepolia Testnet)
CELO_TOKEN_ADDRESS=0xF194afDf50B03e69Bd7D057c1Aa9e10c9954E4C9

# cUSD Token Address (Sepolia Testnet)
CUSD_TOKEN_ADDRESS=0x874069Fa1Eb16D44d622F2e0Ca25eeA172369bC1

# ===========================================
# APP CONFIGURATION
# ===========================================

# App name and URLs
APP_NAME=LoopFi
APP_URL=http://localhost:5173
API_URL=http://localhost:4000

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# Email service configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===========================================
# AI SERVICES (Optional)
# ===========================================

# Hugging Face API key for AI features
HUGGING_FACE_API_KEY=your_hugging_face_api_key

# OpenAI API key for AI features
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# DEVELOPMENT
# ===========================================

# Environment (development, production)
NODE_ENV=development

# Port for the server
PORT=4000